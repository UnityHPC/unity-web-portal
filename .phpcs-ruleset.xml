<?xml version="1.0"?>
<ruleset name="Unity">
    <description>PSR12, with max line length = 100 characters</description>
    <rule ref="PSR12"/>
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="100"/>
            <property name="absoluteLineLimit" value="100"/>
        </properties>
     </rule>
</ruleset>
